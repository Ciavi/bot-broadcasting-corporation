{
    "appenders": {
        "file": {
            "type": "dateFile",
            "filename": "log/bbc.log",
            "pattern": "-yyyy-MM-dd",
            "category": "default"
        },
        "console": {
            "type": "console",
            "category": "default"
        }
    },
    "categories": {
        "default": {
            "appenders": [
                "file",
                "console"
            ],
            "level": "DEBUG"
        }
    }
}